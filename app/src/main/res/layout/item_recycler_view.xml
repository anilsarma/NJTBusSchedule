<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card_view_item_recycler_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8sp"
    android:layout_marginTop="8sp"
    android:layout_marginEnd="8sp"
    android:layout_marginBottom="4sp"
    android:background="@color/white"
    android:foreground="?attr/selectableItemBackground"
    card_view:cardCornerRadius="2sp"
    card_view:cardElevation="2sp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16sp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rela_round"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/round"
            android:backgroundTint="@color/gray_light"
            android:transitionName="shareView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            card_view:layout_conversion_absoluteHeight="0dp"
            card_view:layout_conversion_absoluteWidth="0dp">

            <TextView
                android:id="@+id/tv_round_track"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textColor="#edf2f7"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                card_view:layout_conversion_absoluteHeight="0dp"
                card_view:layout_conversion_absoluteWidth="0dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_recycler_item_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Some String"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="parent"
            card_view:layout_conversion_absoluteHeight="0dp"
            card_view:layout_conversion_absoluteWidth="0dp" />

        <TextView
            android:id="@+id/tv_recycler_item_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="another string"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/tv_recycler_item_1"
            app:layout_constraintTop_toBottomOf="@+id/tv_recycler_item_1"
            card_view:layout_conversion_absoluteHeight="0dp"
            card_view:layout_conversion_absoluteWidth="0dp" />

        <TextView
            android:id="@+id/tv_recycler_item_3"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:text="another string here "
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/tv_recycler_item_2"
            app:layout_constraintTop_toBottomOf="@+id/tv_recycler_item_2"
            card_view:layout_conversion_absoluteHeight="0dp"
            card_view:layout_conversion_absoluteWidth="0dp" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/img_main_card2_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:padding="8dp"
                android:src="@drawable/ic_outline_schedule_24px"
                app:layout_constraintEnd_toStartOf="@+id/img_main_card2_bookmark"
                app:layout_constraintTop_toTopOf="@+id/img_main_card2_bookmark"
                card_view:layout_conversion_absoluteHeight="0dp"
                card_view:layout_conversion_absoluteWidth="0dp" />

            <ImageView
                android:id="@+id/img_main_card2_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:padding="8dp"
                android:src="@drawable/ic_outline_favorite_border_24px"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                card_view:layout_conversion_absoluteHeight="0dp"
                card_view:layout_conversion_absoluteWidth="0dp" />

            <ImageView
                android:id="@+id/img_main_card2_bookmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:padding="8dp"
                android:src="@drawable/ic_outline_bookmark_border_24px"
                app:layout_constraintEnd_toStartOf="@+id/img_main_card2_favorite"
                app:layout_constraintTop_toTopOf="@+id/img_main_card2_favorite"
                card_view:layout_conversion_absoluteHeight="0dp"
                card_view:layout_conversion_absoluteWidth="0dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="74dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>